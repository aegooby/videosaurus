{
    "name": "videosaurus",
    "productName": "videosaurus",
    "version": "1.0.0",
    "description": "",
    "main": ".webpack/main",
    "scripts": {
        "setup": "([ ! -d ~/vcpkg ] && git clone https://github.com/microsoft/vcpkg ~/vcpkg && ~/vcpkg/bootstrap-vcpkg.sh) || (yarn install && ~/vcpkg/vcpkg install $(cat engine/dependencies.vcpkg))",
        "clean": "rm -rf .webpack && rm -rf extensions/react-devtools/ && yarn --cwd engine clean",
        "build": "yarn --cwd engine build",
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .ts ."
    },
    "keywords": [],
    "author": {
        "name": "aegooby",
        "email": "aegooby@gmail.com"
    },
    "license": "MIT",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "videosaurus"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./app/index.html",
                                    "js": "./app/renderer.tsx",
                                    "name": "main_window",
                                    "preload": {
                                        "js": "./app/preload.ts"
                                    }
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@electron-forge/plugin-webpack": "6.0.0-beta.54",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@types/react": "^17.0.1",
        "@types/react-dom": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.0.1",
        "@typescript-eslint/parser": "^4.15.1",
        "css-loader": "^4.2.1",
        "electron": "11.2.3",
        "eslint": "^7.6.0",
        "eslint-import-resolver-typescript": "^2.4.0",
        "eslint-plugin-import": "^2.22.1",
        "jszip": "^3.6.0-0",
        "node-loader": "^1.0.1",
        "react-hot-loader": "^4.13.0",
        "style-loader": "^1.2.1",
        "ts-loader": "^8.0.2",
        "typescript": "^4.0.2",
        "webpack": "^4.27.0"
    },
    "dependencies": {
        "node-addon-api": "^3.1.0",
        "public-ip": "^4.0.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    }
}
